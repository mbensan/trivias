<h1>Bienvenid@ <span id="name"></span></h1>
<p>Cargue sus datos</p>

<script>
  
  async function init() {
    // 1. Recupero el token
    const token = localStorage.getItem('token')

    // 2. Voy a buscar mis datos
    const {data} = await axios.get('/api/auth/my', {
      headers: {
        authorization: token
      }
    })

    console.log(data)
    document.querySelector('#name').innerHTML = data.name
  }
  init()
</script>
